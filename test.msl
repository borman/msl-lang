fun on_turn N
  print ["Ход номер", N]
  buy [2, RawPrice]
  sell [production MyId, ProductionPrice]
  if N%2 = 1 then
    MinProd = 2
  else
    MinProd = 1
  end

  ; Интеграл от кол-ва продукции
  for I from 1 to NPlayers
    $Something(I) = $Something(I) + production MyId

  ToProduce = min [2, raw MyId]
  produce ToProduce
end
